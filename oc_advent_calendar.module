function oc_advent_calendar_contact_form()
{
    /*
     * Send a email to the competition managers.
     */
    if(isset($_GET['Email']) && $_GET['Dayindex'] && $_GET['Navn'] && $_GET['Text'] && $_GET['Tlf'] && !empty(variable_get('oc_advent_lottery_email', '')))
    {
     $from = $_GET['Email'];
     $my_module = 'oc_advent_calendar';
     $my_mail_token = microtime();
     $message = array(
                'id' => $my_module . '_' . $my_mail_token,
                'to' => variable_get('oc_advent_lottery_email', ''),
                'subject' => $_GET['Dayindex'] ." december",
                'body' => array($_GET['Navn']." svarer:<br/><br/>".$_GET['Text'] + "<br/><br/> Telefon: " + $_GET['Tlf']),
                'headers' => array(
                    'From' => $from,
                    'Sender' => $from,
                    'Return-Path' => $from,
                ),
            );
            $system = drupal_mail_system($my_module, $my_mail_token);
            $message = $system->format($message);
            if ($system->mail($message)) {
                echo json_encode(1);
               
            } else {
                echo json_encode(0);
            }
            
    }
    else
    {
        echo json_encode(0);
    }
    drupal_exit();
}
function oc_advent_calendar_user_has_role($role_name, $user = NULL) {
if ($user == NULL) {
global $user;
}
if (is_array($user->roles) && in_array($role_name, array_values($user->roles))) {
return TRUE;
}

return FALSE;
}